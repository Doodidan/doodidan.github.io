{
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run --node-modules-dir ./builder/main.ts",
    "build:dev": "TARGET=development deno run build",
    "dev": "deno run --watch ./src/main.ts"
  },
  "imports": {
    "/": "./",
    "./": "./"
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "deno.ns"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true
  }
}
